<!-- Access data.flats with owner's name as key -->
<% def randomize %>
<% text = data.texts[:love] %>
<% text_new = text.map{|x|x.flatten} %>
<% text_new %>
<% sentences = [] %>
<% text_new.each do |text| %>
<% sentences << text[1] %>
<% end %>
<% sentence = sentences.sample %>
<% sentence %>
<% end %>

